{
  "openapi": "3.0.0",
  "info": {
    "title": "String Constraints Test API",
    "version": "1.0.0"
  },
  "paths": {
    "/validation": {
      "post": {
        "summary": "Test string constraints",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ValidationData"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Validation successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationData"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ValidationData": {
        "type": "object",
        "properties": {
          "shortString": {
            "type": "string",
            "minLength": 3,
            "maxLength": 10
          },
          "exactLengthString": {
            "type": "string",
            "minLength": 8,
            "maxLength": 8
          },
          "minOnlyString": {
            "type": "string",
            "minLength": 5
          },
          "maxOnlyString": {
            "type": "string",
            "maxLength": 15
          },
          "phonePattern": {
            "type": "string",
            "pattern": "^\\+?[1-9]\\d{1,14}$"
          },
          "alphanumericPattern": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9]+$"
          },
          "emailPattern": {
            "type": "string",
            "pattern": "^[\\w\\.-]+@[\\w\\.-]+\\.[a-zA-Z]{2,}$"
          },
          "uppercasePattern": {
            "type": "string",
            "pattern": "^[A-Z]{3,6}$"
          },
          "numberPattern": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          },
          "hexColorPattern": {
            "type": "string",
            "pattern": "^#[0-9A-Fa-f]{6}$"
          },
          "constrainedWithPattern": {
            "type": "string",
            "minLength": 6,
            "maxLength": 12,
            "pattern": "^[a-z]+$"
          },
          "complexPattern": {
            "type": "string",
            "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)[a-zA-Z\\d@$!%*?&]{8,}$"
          }
        }
      }
    }
  }
}
